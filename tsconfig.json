{
    "include": 
    [
        "./src/**/*"
    ],
    "exclude": 
    [
        "node_modules",
        "doc",
        "dist"
    ],
    "compilerOptions": 
    {
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "stripInternal": true,
        "pretty": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "declaration":true,
        "noEmitHelpers": false,
        "declarationDir":"./typings",
        "lib": 
        [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "baseUrl": ".",
        "paths": {
            "src": ["./src"],
            "config/*": ["./src/config/*"],
            "models": ["./src/models"],
            "models/*": ["./src/models/*"],
            "common/*": ["./src/common/*"],
            "mixins/*": ["./src/mixins/*"],
            "components/*": ["./src/components/*"]
        }
    }
}